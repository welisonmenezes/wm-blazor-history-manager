@page "/"

<h1>Hello, world!</h1>

Welcome to your new app.

<button class="btn btn-primary" @onclick="@(e => HisotryManager.Back())">Voltar</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Forward())">Avançar</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Go(-1))">Voltar -1</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Go(+1))">Avançar +1</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Clear())">Limpar</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.StopWatch())">Stop Watch</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.RestoreWatch())">Restore Watch</button>

<SurveyPrompt Title="How is Blazor working for you?" />

@code {
    [Inject]
    private IWMHistoryManager HisotryManager { get; set; }

    protected override async Task OnInitializedAsync()
    {
        await HisotryManager.SetPageTitle("Home");
    }
}
