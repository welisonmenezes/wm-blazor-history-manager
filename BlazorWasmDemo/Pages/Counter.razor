@page "/counter"

<h1>Counter</h1>

<p>Current count: @currentCount</p>

<button class="btn btn-primary" @onclick="IncrementCount">Click me</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Back())">Voltar</button>
<button class="btn btn-primary" @onclick="@(e => HisotryManager.Forward())">Avan√ßar</button>

@code {
    [Inject]
    private IWMHistoryManager HisotryManager { get; set; }
    private int currentCount = 0;

    private void IncrementCount()
    {
        currentCount++;
    }

    protected override async Task OnInitializedAsync()
    {
        await HisotryManager.SetPageTitle("Counter");
    }
}
